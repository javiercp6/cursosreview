---
const { nextUrl, prevUrl } = Astro.props;
---

<div class="flex">
  <a
    href={prevUrl}
    class={(!prevUrl
      ? "cursor-not-allowed text-gray-300 dark:text-gray-700 dark:bg-gray-800 "
      : "transition-colors duration-300 transform dark:bg-gray-800 dark:text-gray-200 hover:bg-gray-400 dark:hover:bg-gray-600 hover:text-white dark:hover:text-gray-200 ") +
      "flex items-center justify-center px-4 py-2 mx-1  capitalize bg-white rounded-md  rtl:-scale-x-100  "}
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-5 h-5"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
        clip-rule="evenodd"></path>
    </svg>
  </a>

  <a
    href={nextUrl}
    class={(!nextUrl
      ? "cursor-not-allowed text-gray-300 dark:text-gray-700 dark:bg-gray-800 "
      : "transition-colors duration-300 transform dark:bg-gray-800 dark:text-gray-200 hover:bg-gray-400 dark:hover:bg-gray-600 hover:text-white dark:hover:text-gray-200 ") +
      "flex items-center justify-center px-4 py-2 mx-1  capitalize bg-white rounded-md  rtl:-scale-x-100  "}
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-5 h-5"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
        clip-rule="evenodd"></path>
    </svg>
  </a>
</div>
